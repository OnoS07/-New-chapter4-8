<body>
<h1>Books</h1>
<main>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
 <% @books.each do |book|%>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "show",book_path(book.id) %></td>
    <td><%= link_to "edit",edit_book_path(book.id) %></td>
    <td><%= link_to "destroy",book_path(book.id),method: :delete,
    	"data-confirm" => "Are you sure?" %></td>
  </tr>
 <% end %>
</table>
</main>

<h1>New book</h1>

<%= form_for(@book) do |f|%>

  <% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
  <br>
  <%= f.submit "保存"%>
<% end%>

</body>